<?xml version="1.0"?>
<block>
  <name>Simple MAC</name>
  <key>simple_mac</key>
  <category>gr-mac</category>
  <import>import mac</import>
  <make>mac.simple_mac($addr,$timeout,$maximum_attempts)</make>
    <param>
        <name>Address(0-255)</name>
        <key>addr</key>
        <type>int</type>
    </param>
    <param>
        <name>Maximum ARQ Attempts(n)</name>
        <key>maximum_attempts</key>
        <type>int</type>
    </param>
    <param>
        <name>ARQ Timeout(s)</name>
        <key>timeout</key>
        <type>real</type>
    </param>

  <sink>
    <name>from_radio</name>
    <type>message</type>
    <optional>1</optional>
  </sink>
  <sink>
    <name>from_app</name>
    <type>message</type>
    <optional>1</optional>
  </sink>  
  <sink>
    <name>ctrl_in</name>
    <type>message</type>
    <optional>1</optional>
  </sink>
  
  <source>
    <name>to_radio</name>
    <type>message</type>
    <optional>1</optional>
  </source>
  <source>
    <name>to_app</name>
    <type>message</type>
    <optional>1</optional>
  </source>
  <source>
    <name>ctrl_out</name>
    <type>message</type>
    <optional>1</optional>
  </source>
</block>
